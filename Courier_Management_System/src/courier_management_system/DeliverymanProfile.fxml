      <VBox prefHeight="600.0" prefWidth="180.0" style="-fx-background-color: #AA1BAC;">
         <children>
            <ImageView fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/truck-line.png" />
               </image>
            </ImageView>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#logout_button" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: #AA1BAC;" text="Logout" textFill="WHITE">
