         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="profile_phone" layoutX="180.0" layoutY="100.0" prefHeight="50.0" prefWidth="720.0" style="-fx-background-color: #fff;">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="profile_email" layoutX="180.0" layoutY="150.0" prefHeight="50.0" prefWidth="720.0" style="-fx-background-color: #fff;">
         <font>
            <Font size="20.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
